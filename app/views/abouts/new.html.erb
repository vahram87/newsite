<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<%= form_for :about,url: abouts_path do |f| %>
				<%= f.text_area :title, class: "form-control" %>
				<p><%= f.submit class: "btn btn-lg btn-success" %></p>
			<% end %>

		</div>
		<p><%= @about.title %></p>
	</div>
	<table class="table table-hover table-striped table-responsive-xs table-danger">
			<tr>
				<th>Title:</th>
				<th colspan="3">Editing Options</th>
			</tr>
			<% @abouts.each do |about|  %>
			<tr>
				<td><%= about.title %></td>
				<td><%= link_to "Show" , about_path(about), class: "btn btn-sm btn-info" %></td>
				<td><%= link_to "Edit" , edit_about_path(about),class: "btn btn-sm btn-warning" %></td>
				<td><%= link_to "Delete", 
				about_path(about), 
				method: :Delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %>
				</td>
			</tr>
			<% end %>
</table>
</div>