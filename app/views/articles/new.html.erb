<div class="row" style= "padding-top: 5%">
	<div class="col"></div>
	<div class="col-md-11 ">
<h1>Create New Artiicle</h1>

<%= form_for :article ,url: articles_path, html: { multipart: true } do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</p>
	<p>
		<%= f.label :text %>
		<%= f.text_area :text , class: "form-control"%>
	</p>
	<p>
		<%= f.file_field :photo , class: "form-control"%>
	</p>
	<p><%= f.submit class: "btn btn-lg btn-success" %></p>
<% end %>
<p>
	<%= link_to "Back", articles_path ,class: "btn btn-md btn-info"%>
</p>
	<div class="col"></div>
	</div>
</div>
<table class="table table-hover table-striped table-responsive-xs table-danger">
			<tr>
				<th>Title:</th>
				<th>Photo:</th>
				<th>Text:</th>
				<th colspan="3">Editing Options</th>
			</tr>
			<% @articles.each do |article|  %>
			<tr>
				<td><%= article.title %></td>
				<td><%= image_tag article.photo,style: "height:50px;width:50px" %></td>
				<td><%= truncate(article.text,lenght: 50) %></td>
				<td><%= link_to "Show" , article_path(article), class: "btn btn-sm btn-info" %></td>
				<td><%= link_to "Edit" , edit_article_path(article),class: "btn btn-sm btn-warning" %></td>
				<td><%= link_to "Delete", 
				article_path(article), 
				method: :Delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %>
				</td>
			</tr>
			<% end %>
	</table>


