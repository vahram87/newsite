<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<%= form_for :contact,url: contacts_path do |f| %>
				<%= f.text_field :address, class: "form-control" %>
				<%= f.text_field :phone, class: "form-control" %>
				<%= f.text_field :email, class: "form-control" %>
				<p><%= f.submit class: "btn btn-lg btn-success" %></p>
			<% end %>

		</div>
		
	</div>
	<table class="table table-hover table-striped table-responsive-xs table-danger">
			<tr>
				<th>Address</th>
				<th>Phone</th>
				<th>Email</th>
				<th colspan="3">Editing Options</th>
			</tr>
			<% @contacts.each do |contact|  %>
			<tr>
				<td><%= contact.address %></td>
				<td><%= contact.phone %></td>
				<td><%= contact.email %></td>
				<td><%= link_to "Show" , contact_path(contact), class: "btn btn-sm btn-info" %></td>
				<td><%= link_to "Edit" , edit_about_path(contact),class: "btn btn-sm btn-warning" %></td>
				<td><%= link_to "Delete", 
				contact_path(contact), 
				method: :Delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %>
				</td>
			</tr>
			<% end %>
</table>
</div>