<div class="container">
	<div class="row" style="min-height: 30rem">
		<div class="col-md-9">
			<%= form_for :video,url: videos_path,html: { multipart: true } do |f| %>
				<p>
					<%= f.label :title %>
					<%= f.text_field :title ,class: "form-control" %>
				</p>
				<p>
					<%= f.label :category %>
					<%= f.text_field :category ,class: "form-control" %>
				</p>
				<p>
					<%= f.label :clip %>
					<%= f.file_field :clip ,class: "form-control" %>
				</p>
				<p><%= f.submit class: "btn btn-lg btn-success" %></p>
			<% end %>
		</div>
		<div class="col-md-3">
			
		</div>
	</div>
</div>
<table class="table table-hover table-striped table-responsive-xs table-danger">
			<tr>
				<th>Title:</th>
				<th>Photo:</th>
				<th>Text:</th>
				<th colspan="3">Editing Options</th>
			</tr>
			<% @videos.each do |video|  %>
			<tr>
				<td><%= video.title %></td>
				<td><%= video_tag video.clip,controls: true,type: "video/mp4",style: "width:100px;height:150px;" %></td>
				<td><%= video.category %></td>
				<td><%= link_to "Show" , video_path(video), class: "btn btn-sm btn-info" %></td>
				<td><%= link_to "Edit" , edit_video_path(video),class: "btn btn-sm btn-warning" %></td>
				<td><%= link_to "Delete", 
				video_path(video), 
				method: :Delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %>
				</td>
			</tr>
			<% end %>
	</table>